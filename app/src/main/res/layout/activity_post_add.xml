<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PostAddActivity">

    <!-- Toolbar section with background, back button, title, subtitle, and asset image -->
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/toolbar_bg02">

        <!-- Back button on the toolbar -->
        <ImageButton
            android:id="@+id/toolbarBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_white"
            android:background="@android:color/transparent"
            android:padding="10dp" />

        <!-- Main title on the toolbar -->
        <TextView
            android:id="@+id/toolbarTitleTv"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarBackBtn"
            android:text="Post an Ad"
            android:textColor="?attr/colorOnPrimary"
            android:textStyle="bold"
            android:layout_marginStart="15dp"/>

        <!-- Subtitle under the title -->
        <TextView
            android:id="@+id/toolbarSubtitleTv"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarTitleTv"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textColor="?attr/colorOnPrimary"
            android:layout_toStartOf="@id/toolbarAssetIv"
            android:text="Reach thousands of the renters/tenants quickly"/>

        <!-- Decorative asset image on the right of the toolbar -->
        <ImageView
            android:id="@+id/toolbarAssetIv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/building_asset01"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <!-- Submit button fixed at the bottom of the screen -->
    <Button
        android:id="@+id/submitPostBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Post"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- ScrollView containing the main form content, placed between the toolbar and the submit button -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarRl"
        android:layout_above="@id/submitPostBtn"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:fillViewport="true">

        <!-- Container for form fields and content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section: Property Types using TabLayout -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Types"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <!-- Tab layout for selecting property type -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/propertyCategoryTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Different property type tabs -->
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/boardinghouse"
                    android:text="Boarding House" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/dorm"
                    android:text="Dorm" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/home_black"
                    android:text="Pad" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/apartment"
                    android:text="Apartment" />
            </com.google.android.material.tabs.TabLayout>

            <!-- Section: Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <!-- Property Title Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/propertyTitleTil"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Property Title"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:startIconDrawable="@drawable/title_gray">
                <EditText
                    android:id="@+id/propertyTitleEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descriptionTil"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                app:startIconDrawable="@drawable/description_gray"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">
                <EditText
                    android:id="@+id/descriptionEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Section: Specifications -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specifications"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <!-- Bed Spaces Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bedroomsTil"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bed Spaces"
                app:startIconDrawable="@drawable/bed_gray"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">
                <EditText
                    android:id="@+id/bedroomsEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Bathrooms Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bathroomsTil"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bathrooms in Property"
                app:startIconDrawable="@drawable/bathtub_gray"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">
                <EditText
                    android:id="@+id/bathroomsEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Location Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/locationTil"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="location"
                app:startIconDrawable="@drawable/location_gray"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">
                <EditText
                    android:id="@+id/locationEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textLongMessage"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Rent Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/rentTil"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monthly Rent"
                app:startIconDrawable="@drawable/wallet_gray"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">
                <EditText
                    android:id="@+id/rentEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textLongMessage"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Pick Images Label -->
            <TextView
                android:id="@+id/pickImagesTv"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/add_photo"
                android:drawablePadding="5dp"
                android:paddingVertical="5dp"
                android:gravity="center_vertical"
                android:text="Pick Images"/>

            <!-- RecyclerView to display selected images -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pickImagesRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:spanCount="4"
                tools:listitem="@layout/row_images_picked"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
